# Environment Configuration
# Copy this file to .env and update with your values

# Flask Configuration
FLASK_ENV=development  # Set to 'production' in production
SECRET_KEY=your-secret-key-here-generate-with-python-secrets

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Security Settings (set to 'true' in production)
FORCE_HTTPS=false

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://

# Logging
LOG_LEVEL=INFO
